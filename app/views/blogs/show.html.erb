<html>
  <style>
    html {
      height: 100%;
    }

    body {
      background-repeat: no-repeat;
      color: #fff;
      background-image: linear-gradient(to top, #fbc2eb 0%, #a6c1ee 100%); 
      margin: 8rem 10rem;
    }

    .center{
      display: flex;
      align-items: center; 
      justify-content: center;
      margin: 10rem 0;
    }

    .box{
      margin: 30px;
      border: 2px solid #D9D9D9;
      border-radius: .4em;
      width: 90%;
      padding: 30px 0;          
    }

    h1{
      text-align: center;
    }

    .content{
      padding: 10px 50px;
    }

    .info{
      display: flex;
      justify-content: space-between;
      align-items: center;
      color: #E8E7EB;
      margin: 2rem 0;
    }

    .text {
      font-size: 19px;
    }
  </style>

  <body>
    <div class="center">
      <div class="box">
        <h1><%= @blog.title %></h1>

        <div class="content">
          <div class="info">
            <p><strong>Author: </strong> <%= @blog.user.username %></p>
            <p><strong>Date: </strong> <%= @blog.created_at %></p>
          </div>

          <div class="text">
            <%= @blog.content %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
