<html>
  <style>
    body {
      background-repeat: no-repeat;
      color: #fff;
      background-image: linear-gradient(to top, #fbc2eb 0%, #a6c1ee 100%); 
    }

    html {
      height: 100%;
    }

    .center{
      display: flex;
      align-items: center; 
      justify-content: center;
      margin: 10rem 0;
    }

    .box{
      margin: 30px;
      border: 2px solid #D9D9D9;
      border-radius: .4em;
      width: 50%;
      padding: 30px 0;          
    }

    .title{
      text-align: center;
    }

    .row{
      padding: 10px 30px;
    }

    .message_content{
      font-size: 18px;
      padding: 2rem 0;
    }

    .button{
      text-align: right;
    }

    .btn-link{
      color: white;
      border: 1px solid white;
      background-color: rgba(255, 255, 255, 0.15);
    }
  </style>
  <body>
    <div class="center">
      <div class = "box">
        <div class = "title">
          <h1>Message</h1>
        </div>
        <hr/>
        <div class="row">
          <div class="contents">
            <p><strong>From: </strong><%= @message.sender.username %></p>
            <p><strong>To: </strong><%= @message.receiver.username %></p>
            <p class="message_content"><%= @message.content %></p>

            <% if @message.receiver == current_user %>
              <div class="button">
                <%= link_to "Reply", new_message_path(receiver_username: @message.sender.username), class: "btn btn-link" %>
              </div>
            <% end -%>
          </div>

          <div class="col-md-7">
            <!-- Other content or empty space -->
          </div>
        </div>
      </div>
    </div>
    

    

  </body>
</html>
