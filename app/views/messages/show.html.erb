<h1>Message</h1>

<div class="row">
  <div class="col-md-5">
    <p>From: <%= @message.sender.username %></p>
    <p>To: <%= @message.receiver.username %></p>
    <p><%= @message.content %></p>

    <% if @message.receiver == current_user %>
      <%= link_to "Reply", new_message_path(receiver_username: @message.sender.username), class: "btn btn-link" %>
    <% end -%>
  </div>

  <div class="col-md-7">
    <!-- Other content or empty space -->
  </div>
</div>
